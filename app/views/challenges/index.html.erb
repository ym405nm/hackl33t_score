<h1>こんにちは、<%= current_user.username %>さん</h1>
<p>ユーザー用ページです。</p>


<%= @last_item_question_id %> 問クリア

<div class="row">
  <div class="col-md-6">
    -
  </div>
  <div class="col-md-6">
    <table class="table">
      <thead>
      <tr>
        <th>#</th>
        <th>Challenge</th>
        <th>-</th>
      </tr>
      </thead>

      <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.name %></td>
          <% if @last_item_question_id + 2  >  question.id %>
            <td><%= link_to 'FIGHT', question, class: "btn btn-primary" %></td>
          <% else %>
            <td><%= link_to 'BLOCKED', "#", class: "btn btn-secondary" %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div>
  <h2>Recent</h2>
  <table class="table">
    <tbody>
    <% @challenges.each do |c| %>
      <tr>
        <% if  c.result == 1 %>
          <td>お見事！</td>
          <td><%= c.user.username %>さんが<%= c.question_id %>問目に正解しました。</td>
        <% else %>
          <td>残念></td>
          <td><%= c.user.username %>さんが<%= c.question_id %>問目で間違えました</td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

