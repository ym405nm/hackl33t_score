<!DOCTYPE html>
<html>
  <head>
    <title>Hackle3tScore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      body#op{
        background-color: black;
      }
      #opening-container{
        background-color: black;
        color: white;
      }
      #opening-title{
        display: none;
        color: yellow;
        text-align: center;
        margin-top:150px
      }
      #opening-start{
        margin-top: 30px;
      }
      #opening-message{
        margin-top: 30px;
        color: white;
      }
    </style>
    <script>
      $(function() {
        $("#opening-title").fadeIn(4800);
      });Z
    </script>
  </head>

  <body id="op">
    <div class="container" id="opening-container">
      <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>

    <%= yield %>
    </div>
  </body>
</html>
