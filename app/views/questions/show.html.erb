<h1><%= @question.name %></h1>

<div class="row">
  <div class="col-md-3">
    <%= image_tag @question.image_url %>
  </div>
  <div class="col-md-9">
    <div>
      <%= @question.description.html_safe %>
    </div>
  </div>
</div>


<div id="area" style="margin-top: 30px">
  <h2>解答</h2>

<% if @check_resolved %>

  既に回答済みです。

<% else %>

  <%= form_with(local: true, url: 'result') do |form| %>
  <div class="form-group">
    <%= form.label "Flag" %>
    <%= form.text_field "flag",　class:'form-control' %>
  </div>

  <%= hidden_field_tag :question_id, @question.id %>

  <div>
    <%= form.submit "送信", class:"btn btn-primary" %>
  </div>
  <% end %>

<% end %>
<br><br>
<p>
  <%= link_to("戻る", "/challenges", class: "btn btn-secondary") %>
</p>
</div>